                        <div class="card">
                            <h5 class="card-header"> 
                                <input class="boxes" type="checkbox" name='box' value="<%= list[i]._id %>"></a>
                                <%= list[i].category %></h5>
                            <div class="card-body">
                            <h5 class="card-title"> <%= list[i].description %> </h5>
                            <p class="card-text"></p>
                           
                            <%= list[i].duedate %> 
                            </div>
                        </div>
                        <div class="mt-4">
    
                        </div>
                    <% } %>
                   
                <% } %>
            </div>
    </div>
    
    
