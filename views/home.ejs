<body>
    <div class="container-fluid px-40">
        <div class="heading  display-2">
            TODO APP
        </div>
        <form action='/addtask' method="post" >
            <div class="des form-group">
           
                <lable class="text-muted" for="des">Description</lable><br>
                <input  class="form-control form-control-lg"type="text" id="des" name="description" required>
            </div>
            <div class="cate_date ">
                <div class="row">
                    <div class=" col-sm">
                        <label  class="text-muted" for="cat">CATEGORY</label><br>
                        <select class="form-control form-control-lg" name="category" id="cat">
                        <option value="personal">Personal</option>
                        <option value="work">Work</option>
                        <option value="study">Study</option>
                        <option value="grocerry">Grocery</option>
                        <option value="cleaning">Cleaning</option>
                        </select>
                    </div>
                    <div class="date col-sm">
                        <lable class="text-muted" for="date">Due Date</lable><br>
                        <input  class="form-control form-control-lg" type="date" id="date" name="date" required>
                    </div>
                </div>
               
                <div class="buttons row">
                    <div class="addtask btn btn_size btn-lg btn-block col-sm">
                        <i class="fas fa-plus-square"></i>
                       
                        <input type="submit" class="btn btn-primary"  value=" ADD TASk"></i>
                       
                    </div>
                    <button class="btn btn-danger col-sm" onclick="myfun()">
                        Delete
                    </button>
                </div>  
        </form>
        
            <div>
                <div class="display-4 ">Tasks Pending </div>
